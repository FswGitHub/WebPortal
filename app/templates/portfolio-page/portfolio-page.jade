#portfolio-page.portfolio-page-wrapper
    .data-table-wrapper(hidden="[[!portfolioData]]")
        table.data-table
            thead.data-thead(hidden="[[tabWidthScreen]]")
                tr.data-thead-tr
                    th.data-thead-th.row-start
                        span.th-content Code
                    th.data-thead-th
                        span.th-content Name
                    th.data-thead-th
                        span.th-content Status
                    th.data-thead-th
                        span.th-content Tax currency
                    th.data-thead-th.row-end
                        span.th-content Residency
            tbody.data-tbody
                template(is="dom-repeat", items="[[portfolioData]]")
                    tr.mobile-data-thead(hidden="[[!tabWidthScreen]]", data-index="[[index]]", on-tap="openTableRow")
                        td
                            span.td-content [[item.name]]
                    tr(on-tap="goToPortfolioItem", class$="data-tbody-tr [[addClass(tabWidthScreen, 'mobile-data-td')]]")
                        td.data-tbody-td.row-start
                            span.td-label(hidden="[[!tabWidthScreen]]") Code
                            span.td-content [[item.code]]
                        td.data-tbody-td(hidden="[[tabWidthScreen]]")
                            span.td-content [[item.name]]
                        td.data-tbody-td
                            span.td-label(hidden="[[!tabWidthScreen]]") Status
                            span.td-content [[item.status]]
                        td.data-tbody-td
                            span.td-label(hidden="[[!tabWidthScreen]]") Tax currency
                            span.td-content [[item.taxCurrency]]
                        td.data-tbody-td.row-end
                            span.td-label(hidden="[[!tabWidthScreen]]") Residency
                            span.td-content [[item.residency]]
