#profile-page.profile-page-wrapper
    .page-header-wrapper
        h2.page-header Profile: [[userData.firstName]] [[userData.lastName]]
    div(class$="profile-form-wrapper layout horizontal[[addClass(mobileWidthScreen,' vertical-reverse')]]")
        .profile-fields.flex
            paper-input(label="First Name", type="text", name="firstName", value="[[userData.firstName]]", error-message="Please enter your First Name", required,  readonly$="[[!showEdit]]")
            paper-input(label="Last Name", type="text", name="lastName", value="[[userData.lastName]]", error-message="Please enter your Last Name", required, readonly$="[[!showEdit]]")
            paper-input(label="Email", type="email", name="email", value="[[userData.email]]", error-message="Please enter your Email", required,  readonly$="[[!showEdit]]")
            paper-input(label="Cellphone", type="text", name="cellPhone", value="[[userData.cellPhone]]", readonly$="[[!showEdit]]")
            paper-input(label="ID Number", type="text", name="idNumber", value="[[userData.idNumber]]", readonly$="[[!showEdit]]")
        .profile-image-wrapper.relative
            iron-image#profileImage.profile-image(src="{{userPhoto}}", sizing="cover")
            #imageUploader.profile-change-image(hidden="[[!showEdit]]")
                img.edit-img(src="/assets/images/camera.png")
                span.edit-label Change your Profile Photo
                span.edit-size 200px x 200px
                input#uploader.edit-button.fit(type="file", accept=".jpg,.png")
    .profile-edit-wrapper
        paper-button.profile-edit-btn(raised, hidden="[[showEdit]]", on-tap="toggleProfileChanging") Edit profile
        .profile-save-changes.layout.horizontal(hidden="[[!showEdit]]")
            paper-button.profile-edit-btn(raised, on-tap="saveProfileChanges") Save changes
            paper-button.profile-edit-btn(raised, on-tap="toggleProfileChanging") Cancel
